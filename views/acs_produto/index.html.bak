{{extend 'layout.html'}}
<div class="row">
    <div class="col-md-6 col-12">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6 col-6">
                    </div>
                    <div class="col-md-6 col-6">
                    </div>
                </div>
                </div>
            <div class="col-md-6 d-flex justify-content-between align-items-center">
            </div>
        </div>
    </div>
    <div class="col-md-6 col-12 d-flex justify-content-between align-items-center" id="noprint">
        {{if False:}}
            {{if paginas>0:}}
            {{pass}}
        {{pass}}
    </div>
</div>
{{if True:}}
<div class="row">
    <div class="col-md-6">
<!--         <h5 class="text-left my-2">Pagina {{=pagina}}/{{=paginas}}</h5> -->
    </div>
    <div class="col-md-6" id="noprint">

    </div>
</div>

<div class="container-fluid pt-1 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0">Lista de Produtos {{=pagina}}/{{=paginas}}</h6>
            <div class="form-group row m-1" id="noprint">
                <input type="text" class="form-control col-9 col-form-label ml-2" name="busca" placeholder="Pesquisar" id="input"/>
<!--                 <div class="col-2">
                    <button class="btn btn-primary botao " id="bt" type="button">
                        <i class="fa fa-search"></i>
                    </button>
                </div> -->
            </div>
        </div> 
        <div class="d-flex align-items-center justify-content-between mb-4">
            <a class="btn btn-success btn-sm" href="{{=URL('cadastrar')}}" >
                <i class="fa fa-fw fa-plus"></i> Cadastrar
            </a>
            {{if True:}}
                {{include 'paginacao.html'}}
            {{pass}}
        </div> 
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th id="noprint" scope="col">Alterar</th>
                        <th scope="col">Quant</th>
                        <th scope="col" class="text-left">Descrição</th>
                        <th class="text-info" scope="col">Custo</th>
                        <th class="text-info" scope="col">Custo Total</th>
                        <th scope="col">Preço</th>
                        <th scope="col">Preço Total</th>
                        <th id="noprint"  class="text-right">Acessar</th>
                    </tr>
                </thead>
                <tbody>
                    {{for row in rows:}}
                        <tr>
                            <td id="noprint" scope="row">
                                <a class="btn btn-warning btn-sm" href="{{=URL('alterar', args=[row.id,pagina])}}">
                                    <i class="fa fa-fw fa-pencil-square "></i>
                                    Alterar
                                </a>
                            </td>
                            <td>{{=row.quantidade_estoque}}</td>
                            <td class="text-left" title="{{=row}}">{{=row.descricao}}</td>
                            <td class="text-info">{{=dinheiro(row.custo_unitario)}}</td>
                            <td class="text-info">{{=dinheiro(row.quantidade_estoque*row.custo_unitario)}}</td>
                            <td>{{=dinheiro(row.preco_unitario)}}</td>
                            <td>{{=dinheiro(row.quantidade_estoque*row.preco_unitario)}}</td>
                            <td id="noprint" class="text-right">
                                <a class="btn btn-info btn-sm" href="{{=URL('acessar', args=row.id)}}">
                                    <i class="fa fa-fw fa-folder-open"></i>
                                    Acessar
                                </a>
                            </td>
                        </tr>
                    {{pass}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{if len(rows)>15:}}
<div class="row">
    <div class="col-md-6">
        <h5 class="text-left my-2">Pagina {{=pagina}}/{{=paginas}}</h5>
    </div>
    <div class="col-md-6"  id="noprint">
        {{if True:}}
            {{include 'paginacao.html'}}
        {{pass}}
    </div>
</div>
{{pass}}
{{pass}}

<script>
    // Adicione o atributo "autofocus" ao campo de entrada
    document.querySelector('#input').focus();
    var inputElement = document.querySelector('input[name=busca]');

    $(document).keypress(function(e) {
    if(e.which == 13) {
     var busca= inputElement.value;
        window.location.href = "{{=URL(args=1)}}/"+busca
    }
});
</script>

<script>
    document.addEventListener('keydown', function(event) {
      // Verifica se a tecla pressionada é a tecla F1 (código 112)
      if (event.keyCode === 112) {
        // Redireciona para a URL especificada
        window.location.href = "{{=URL('cadastrar')}}"; // Substitua pela URL desejada
      }
    });
  </script>
