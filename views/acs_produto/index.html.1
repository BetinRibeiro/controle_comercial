<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
            <div class="d-flex align-items-center justify-content-between mb-4">
                <h6 class="mb-0">Lista de Produtos {{=pagina}}/{{=paginas}}</h6>
                <a class="btn btn-success btn-sm" href="{{=URL('cadastrar')}}" ><i class="fa fa-fw fa-plus"></i> Cadastrar</a>
                
        </div> {{if True:}}
            {{include 'paginacao.html'}}
            {{pass}}
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered table-hover mb-0">
                <thead>
                    <tr class="text-dark">
                        <th id="noprint" scope="col">#</th>
                        <th scope="col">Quant</th>
                        <th scope="col">Descrição</th>
                        <th scope="col">Preço</th>
                        <th scope="col">Total</th>
                        <th id="noprint"  class="text-right">Acessar</th>
                    </tr>
                </thead>
                <tbody>
                    {{for row in rows:}}
                        <tr>
                            <td id="noprint" scope="row">
                                <a  href="{{=URL('alterar', args=row.id)}}">
                                    <i class="fa fa-fw fa-1x py-1 fa-pencil-square text-warning" ></i>
                                </a>
                            </td>
                            <td>{{=row.quantidade_estoque}}</td>
                            <td>{{=row.descricao}}</td>
                            <td>{{=row.preco_unitario}}</td>
                            <td>{{=row.quantidade_estoque*row.preco_unitario}}</td>
                            <td id="noprint" class="text-right">
                                <a  href="{{=URL('acessar', args=[row.id])}}">
                                 <i class="fa fa-fw fa-1x py-1 fa-folder-open  text-info" ></i></a>
                            </td>
                        </tr>
                    {{pass}}
                </tbody>
            </table>
        </div>
    </div>
</div>
{{if len(rows)>15:}}
